<Window x:Class="Nothing.View.AttendeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Участники заседаний" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Attendees}" 
                  SelectedItem="{Binding SelectedAttendee}" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Grid.Row="0" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AttendeesId}" Width="50"/>
                <DataGridTextColumn Header="Имя участника" Binding="{Binding Member.Name}" Width="*"/>
                <DataGridTextColumn Header="Комиссия" Binding="{Binding Meeting.Commission.Name}" Width="*"/>
                <DataGridTextColumn Header="Дата/Время" Binding="{Binding Meeting.MeetingDateTime}" Width="150"/>
                <DataGridTextColumn Header="Место" Binding="{Binding Meeting.Location}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Добавить" Width="100" Margin="5" Command="{Binding AddCommand}"/>
            <Button Content="Редактировать" Width="100" Margin="5" Command="{Binding EditCommand}"/>
            <Button Content="Удалить" Width="100" Margin="5" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</Window>
