<Window x:Class="Nothing.View.CommissionMembershipEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать членство в комиссии" Height="250" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Комиссия:"/>
            <ComboBox ItemsSource="{Binding Commissions}" 
                      SelectedItem="{Binding SelectedCommission}" 
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,5">
            <TextBlock Text="Член Думы:"/>
            <ComboBox ItemsSource="{Binding Members}" 
                      SelectedItem="{Binding SelectedMember}" 
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Даты -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,5">
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Дата начала:"/>
                <DatePicker SelectedDate="{Binding StartDate}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Дата окончания:"/>
                <DatePicker SelectedDate="{Binding EndDate}"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="100" Margin="5" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Отмена" Width="100" Margin="5" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
