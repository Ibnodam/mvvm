<Window x:Class="Nothing.View.CommissionActivityReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчет по активности комиссий" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Активность комиссий за период" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Параметры отчета -->
        <GroupBox Grid.Row="1" Header="Параметры отчета" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Период: начало -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Дата начала:"/>
                    <DatePicker SelectedDate="{Binding StartDate}"/>
                </StackPanel>

                <!-- Период: окончание -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Дата окончания:"/>
                    <DatePicker SelectedDate="{Binding EndDate}"/>
                </StackPanel>

                <!-- Кнопка генерации -->
                <Button Grid.Column="2" Content="Сформировать отчет" 
                        Command="{Binding GenerateReportCommand}"
                        VerticalAlignment="Bottom" Margin="5" Width="120"/>
            </Grid>
        </GroupBox>

        <!-- Таблица отчета -->
        <GroupBox Grid.Row="2" Header="Результаты отчета">
            <DataGrid ItemsSource="{Binding ActivityReport}" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <!-- Название комиссии -->
                    <DataGridTextColumn Header="Комиссия" 
                                      Binding="{Binding CommissionName}" 
                                      Width="3*"/>

                    <!-- Председатель -->
                    <DataGridTextColumn Header="Председатель" 
                                      Binding="{Binding ChairmanName}" 
                                      Width="2*"/>

                    <!-- Количество членов -->
                    <DataGridTextColumn Header="Членов" 
                                      Binding="{Binding MembersCount}" 
                                      Width="*"/>

                    <!-- Количество заседаний -->
                    <DataGridTextColumn Header="Заседаний" 
                                      Binding="{Binding MeetingsCount}" 
                                      Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MeetingsCount}" Value="0">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding MeetingsCount}" Value="10">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Заседаний в месяц (примерно) -->
                    <DataGridTextColumn Header="В месяц (прим.)" 
                                      Binding="{Binding MeetingsPerMonth, StringFormat={}{0:F1}}" 
                                      Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Закрыть" Width="100" Margin="5" 
                    Command="{Binding CloseCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>