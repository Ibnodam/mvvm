<Window x:Class="Nothing.View.MeetingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Митинги" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Список митингов -->
        <GroupBox Header="Митинги">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Добавить" Command="{Binding AddMeetingCommand}" Margin="0,0,5,0"/>
                    <Button Content="Редактировать" Command="{Binding EditMeetingCommand}" Margin="0,0,5,0"/>
                    <Button Content="Удалить" Command="{Binding DeleteMeetingCommand}"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding Meetings}"
                          SelectedItem="{Binding SelectedMeeting}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding MeetingId}" Width="50"/>
                        <DataGridTextColumn Header="Комиссия" Binding="{Binding Commission.Name}" Width="150"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding MeetingDateTime}" Width="150"/>
                        <DataGridTextColumn Header="Место" Binding="{Binding Location}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Участники выбранного митинга -->
        <GroupBox Header="Участники" Grid.Column="1" Margin="10,0,0,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Добавить" Command="{Binding AddAttendeeCommand}" Margin="0,0,5,0"/>
                    <Button Content="Удалить" Command="{Binding DeleteAttendeeCommand}"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding SelectedMeeting.MeetingAttendees}"
                          SelectedItem="{Binding SelectedAttendee}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя участника" Binding="{Binding Member.FullName}" Width="200"/>
                        <DataGridTextColumn Header="Роль" Binding="{Binding RoleId}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
