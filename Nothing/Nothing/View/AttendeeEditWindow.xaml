<Window x:Class="Nothing.View.AttendeeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить участника" Height="250" Width="350" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Участник:"/>
        <ComboBox ItemsSource="{Binding Members}"
                  DisplayMemberPath="FullName"
                  SelectedItem="{Binding SelectedMember}" />

        <TextBlock Text="Роль:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Attendee.RoleId}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
