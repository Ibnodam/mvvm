<Window x:Class="Nothing.View.CommissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Комиссии" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Commissions}" 
                  SelectedItem="{Binding SelectedCommission}" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Grid.Row="0" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CommissionId}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Profile}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Добавить" Width="100" Margin="5" Command="{Binding AddCommand}"/>
            <Button Content="Редактировать" Width="100" Margin="5" Command="{Binding EditCommand}"/>
            <Button Content="Удалить" Width="100" Margin="5" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</Window>