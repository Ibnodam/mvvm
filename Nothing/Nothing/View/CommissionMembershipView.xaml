<Window x:Class="Nothing.View.CommissionMembershipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Членство в комиссиях" Height="450" Width="700">
    <Window.DataContext>
        <vm:CommissionMembershipViewModel xmlns:vm="clr-namespace:Nothing.ViewModel"/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Memberships}" SelectedItem="{Binding SelectedMembership}"
                  AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ComisMemId}" Width="50"/>
                <DataGridTextColumn Header="Член Думы" Binding="{Binding Member.Name}" Width="*"/>
                <DataGridTextColumn Header="Комиссия" Binding="{Binding Commission.Name}" Width="*"/>
                <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate}" Width="120"/>
                <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDate}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Добавить" Width="100" Margin="5" Command="{Binding AddCommand}"/>
            <Button Content="Редактировать" Width="100" Margin="5" Command="{Binding EditCommand}"/>
            <Button Content="Удалить" Width="100" Margin="5" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</Window>
