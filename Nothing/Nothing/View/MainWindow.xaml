<Window x:Class="Nothing.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Nothing.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Система управления городской думой" Height="600" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="SimpleButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3F51B5"/>
            <Setter Property="BorderBrush" Value="#303F9F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5C6BC0"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#283593"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3F51B5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <materialDesign:PackIcon Kind="AccountGroup" Width="40" Height="40" Foreground="#3F51B5" Margin="0,0,15,0"/>
            <TextBlock Text="СИСТЕМА УПРАВЛЕНИЯ ГОРОДСКОЙ ДУМОЙ" 
                       FontSize="24" FontWeight="Bold" Foreground="#3F51B5"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Запросы по условию" Style="{StaticResource GroupHeaderStyle}"/>

                <Button Content="Q1: Состав комиссий" 
                        Command="{Binding OpenCommissionsReportCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <Button Content="Q: Отчет по посещаемости" 
                        Command="{Binding OpenAttendanceReportCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <Button Content="Q: Активность комиссий" 
                        Command="{Binding OpenCommissionActivityReportCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <!--
                <Button Content="Q1" 
                        Command="{Binding OpenCommissionReportCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>
                -->
            </StackPanel>

            <Rectangle Grid.Column="1" Fill="#E0E0E0" Margin="0,50" RadiusX="2" RadiusY="2"/>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Запросы" Style="{StaticResource GroupHeaderStyle}"/>

                <Button Content="Члены Думы" 
                        Command="{Binding OpenMembersCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <Button Content="Членство в комиссиях" 
                        Command="{Binding OpenQueryMembershipsCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <Button Content="Заседания комиссий" 
                        Command="{Binding OpenCommissionMeetingsCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <Button Content="Управление комиссиями" 
                        Command="{Binding OpenCommissionsManagementCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>

                <!--
                <Button Content="Участники заседаний" 
                        Command="{Binding OpenAttendeesCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>
                
                <Button Content="Председатели комиссий" 
                        Command="{Binding OpenChairsWindowCommand}"
                        Style="{StaticResource SimpleButtonStyle}"/>
                -->
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="8" Margin="0,20,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Information" Width="16" Height="16" Foreground="#757575" Margin="0,0,8,0"/>
                <TextBlock Text="Городская Дума - Система управления законодательной деятельностью" 
                           Foreground="#757575" FontSize="12" FontStyle="Italic"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>