<Window x:Class="Nothing.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Авторизация - Городская Дума" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <materialDesign:PackIcon Kind="ShieldAccount" Width="32" Height="32" Foreground="#3F51B5" Margin="0,0,10,0"/>
            <TextBlock Text="Авторизация в системе" 
                       FontSize="20" FontWeight="Bold" Foreground="#3F51B5"
                       VerticalAlignment="Center"/>
        </StackPanel>

     
        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <TextBlock Text="Логин:" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#333"/>
            <TextBox Text="{Binding Login}" 
                     materialDesign:HintAssist.Hint="Введите логин"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,0,0,15" FontSize="14"/>

     
            <TextBlock Text="Пароль:" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#333"/>
            <PasswordBox x:Name="PasswordBox" 
                         materialDesign:HintAssist.Hint="Введите пароль"
                         Margin="0,0,0,25" FontSize="14"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Войти" Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,10,0" Width="120" Height="36"/>

                <Button Content="Регистрация" Command="{Binding RegisterCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="120" Height="36"/>
            </StackPanel>
        </StackPanel>

 
        <!--<Border Grid.Row="2" Background="#E8F5E8" BorderBrush="#C8E6C9" BorderThickness="1" 
                CornerRadius="4" Padding="10" Margin="0,10,0,10"
                Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
            --><!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="CheckCircle" Foreground="#4CAF50" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding CurrentUserName, StringFormat=Вы вошли как: {0}}" 
                           FontWeight="SemiBold" Foreground="#2E7D32"/>
            </StackPanel>--><!--
        </Border>-->


    </Grid>
</Window>