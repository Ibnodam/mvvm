<Window x:Class="Nothing.View.AttendanceReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Отчет по посещаемости заседаний" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Отчет по посещаемости заседаний" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Параметры отчета -->
        <GroupBox Grid.Row="1" Header="Параметры отчета" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Выбор комиссии -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Комиссия:"/>
                    <ComboBox ItemsSource="{Binding Commissions}" 
                              SelectedItem="{Binding SelectedCommission}"
                              DisplayMemberPath="Name"/>
                </StackPanel>

                <!-- Период: начало -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Дата начала:"/>
                    <DatePicker SelectedDate="{Binding StartDate}"/>
                </StackPanel>

                <!-- Период: окончание -->
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Дата окончания:"/>
                    <DatePicker SelectedDate="{Binding EndDate}"/>
                </StackPanel>

                <!-- Кнопка генерации -->
                <Button Grid.Column="3" Content="Сформировать отчет" 
                        Command="{Binding GenerateReportCommand}"
                        VerticalAlignment="Bottom" Margin="5" Width="120"/>
            </Grid>
        </GroupBox>

        <!-- Таблица отчета -->
        <GroupBox Grid.Row="2" Header="Результаты отчета">
            <DataGrid ItemsSource="{Binding AttendanceReport}" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Член комиссии" 
                                      Binding="{Binding MemberName}" 
                                      Width="2*"/>
                    <DataGridTextColumn Header="Всего заседаний" 
                                      Binding="{Binding TotalMeetings}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Посещено" 
                                      Binding="{Binding AttendedMeetings}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Пропущено" 
                                      Binding="{Binding MissedMeetings}" 
                                      Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MissedMeetings}" Value="0">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding MissedMeetings}" Value="{x:Static sys:Int32.MaxValue}">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Посещаемость (%)" 
                                      Binding="{Binding AttendanceRate, StringFormat={}{0:F1}%}" 
                                      Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AttendanceRate}" Value="100">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AttendanceRate}" Value="0">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Закрыть" Width="100" Margin="5" 
                    Command="{Binding CloseCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>