<Window x:Class="Nothing.View.MeetingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование митинга" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Комиссия:"/>
        <ComboBox ItemsSource="{Binding Commissions}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedCommission}" />

        <TextBlock Text="Дата и время:" Margin="0,10,0,0"/>
        <DatePicker SelectedDate="{Binding Meeting.MeetingDateTime}" />

        <TextBlock Text="Место проведения:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Meeting.Location}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
