<Window x:Class="Nothing.View.CommissionReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Nothing.ViewModel"
        Title="Отчет по комиссиям" Height="450" Width="800">

    <Window.DataContext>
        <vm:CommissionReportViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Commissions}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Profile}" Width="*" />
                <DataGridTextColumn Header="Председатель" Binding="{Binding ChairmanName}" Width="*" />
                <DataGridTextColumn Header="Члены комиссии" Binding="{Binding MembersList}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
